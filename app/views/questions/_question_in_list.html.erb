<div class="question_in_list">
  <div class="name">
    <%= link_to(@question.user.display_name, user_path(@question.user)) %>
  </div>
  <div class="content">
    <%= simple_format h(@question.content) %>
  </div>
  <% if @question.answer %>
    <div class="answer">
      <%= @question.answer %>
    </div>
  <% elsif @is_rogome_creator %>
    <div id="<%= @question.id %>" class="creator_answer">
      <a href="#">Answer</a>
    </div>
  <% end %>
</div>
